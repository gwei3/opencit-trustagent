<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <groupId>com.intel.mtwilson.trustagent.packages</groupId>
    <artifactId>trustagent-linux</artifactId>
    <version>3.2.1-SNAPSHOT</version>
    
    <packaging>pom</packaging>
    <description>Self-extracting executable that installs Trust Agent and its bundled requirements</description>
    
    <properties>
        <makeself.directory>${project.build.directory}/${project.artifactId}-${project.version}</makeself.directory>
    </properties>
    
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.intel.mtwilson.maven</groupId>
                <artifactId>mtwilson-maven-bom-coreutil</artifactId>
                <version>${project.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <dependency>
                <groupId>com.intel.mtwilson.maven</groupId>
                <artifactId>mtwilson-maven-bom-external</artifactId>
                <version>${project.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    
    <build>
        <resources>
            <resource>
                <directory>src/files</directory>
            </resource>
        </resources>
    </build>
    
    <profiles>
        <profile>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            
            <dependencies>
                <dependency>
                    <groupId>com.intel.mtwilson.trustagent.packages</groupId>
                    <artifactId>trustagent-zip</artifactId>
                    <classifier>application</classifier>
                    <version>${project.version}</version>
                    <type>zip</type>
                </dependency>
                <dependency>
                    <groupId>com.intel.mtwilson.linux</groupId>
                    <artifactId>mtwilson-linux-util</artifactId>
                    <version>${project.version}</version>
                    <type>sh</type>
                </dependency>
                <dependency>
                    <groupId>com.intel.mtwilson.trustagent.features</groupId>
                    <artifactId>mtwilson-trustagent-tpm2-packages</artifactId>
                    <version>${project.version}</version>
                    <type>bin</type>
                </dependency>
                <!--
                <dependency>
                    <groupId>net.sourceforge.tboot</groupId>
                    <artifactId>tboot</artifactId>
                    <version>1.9.5</version>
                    <classifier>x86_64</classifier>
                    <type>rpm</type>
                </dependency>
                <dependency>
                    <groupId>net.sourceforge.tboot</groupId>
                    <artifactId>tboot</artifactId>
                    <version>1.9.5</version>
                    <classifier>amd64</classifier>
                    <type>deb</type>
                </dependency>
                -->
                
                <dependency>
                    <groupId>org.slf4j</groupId>
                    <artifactId>slf4j-api</artifactId>
                </dependency>
                <dependency>
                    <groupId>ch.qos.logback</groupId>
                    <artifactId>logback-classic</artifactId>
                </dependency>
            </dependencies>
            
            <build>
                <plugins>
                    <!-- copy artifacts plugin -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>
                        <version>2.4</version>
                        <executions>
                            <execution>
                                <id>copy</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy</goal>
                                </goals>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.trustagent.packages</groupId>
                                            <artifactId>trustagent-zip</artifactId>
                                            <classifier>application</classifier>
                                            <version>${project.version}</version>
                                            <type>zip</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                            <destFileName>trustagent-${project.version}.zip</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.linux</groupId>
                                            <artifactId>mtwilson-linux-util</artifactId>
                                            <version>${project.version}</version>
                                            <type>sh</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                            <destFileName>functions</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>com.intel.mtwilson.trustagent.features</groupId>
                                            <artifactId>mtwilson-trustagent-tpm2-packages</artifactId>
                                            <version>${project.version}</version>
                                            <type>bin</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                        </artifactItem>
                                        <!--
                                        <artifactItem>
                                            <groupId>net.sourceforge.tboot</groupId>
                                            <artifactId>tboot</artifactId>
                                            <version>1.9.5</version>
                                            <classifier>x86_64</classifier>
                                            <type>rpm</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>net.sourceforge.tboot</groupId>
                                            <artifactId>tboot</artifactId>
                                            <version>1.9.5</version>
                                            <classifier>amd64</classifier>
                                            <type>deb</type>
                                            <outputDirectory>${makeself.directory}</outputDirectory>
                                        </artifactItem>
                                        -->
                                    </artifactItems>
                                    <overWriteReleases>false</overWriteReleases>
                                    <overWriteSnapshots>true</overWriteSnapshots>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    
                    <!-- copy other resources plugin -->
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.5</version>
                        <executions>
                            <execution>
                                <id>copy-build-resources</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.directory}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/build</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                            <execution>
                                <id>copy-resources</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${makeself.directory}</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>src/etc</directory>
                                            <includes>
                                                <include>version</include>
                                            </includes>
                                            <filtering>true</filtering>
                                        </resource>
                                        <resource>
                                            <directory>src/files</directory>
                                            <includes>
                                                <include>**/*</include>
                                            </includes>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>            
                            </execution>
                        </executions>
                    </plugin>
                    
                    <!-- get tboot and tbootxm dependencies plugin -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.8</version>
                        <executions>
                            <execution>
                                <id>get-tboot-tbootxm-dependencies</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <chmod perm="+x" file="${project.build.directory}/get-dependencies.sh"/>
                                        <exec executable="/bin/bash" dir="${makeself.directory}" failonerror="true">
                                            <redirector output="${project.build.directory}/get-dependencies.log" alwayslog="true"/>
                                            <arg value="-c"/>
                                            <arg value="../get-dependencies.sh"/>
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>attach-artifact</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <loadfile property="distro" srcFile="${project.build.directory}/distro"/>
                                        <echo>DISTRO=${distro}</echo>
                                        <move file="${project.build.directory}/${project.artifactId}-${project.version}.bin" tofile="${project.build.directory}/${project.artifactId}-${project.version}-${distro}.bin"/>
                                        <attachartifact file="${project.build.directory}/${project.artifactId}-${project.version}-${distro}.bin" classifier="${distro}" type="bin"/>
                                    </target>
                                </configuration>
                            </execution>
                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>org.apache.ant</groupId>
                                <artifactId>ant</artifactId>
                                <version>1.8.4</version>
                            </dependency>
                            <dependency>
                                <groupId>ant-contrib</groupId>
                                <artifactId>ant-contrib</artifactId>
                                <version>1.0b3</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                    
                    <!-- begin create self-extracting installer plugin -->
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <id>create-single-installer</id>
                                <phase>compile</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <configuration>
                                    <executable>bash</executable>
                                    <arguments>
                                        <argument>makebin-auto.sh</argument>
                                        <argument>${makeself.directory}</argument>
                                    </arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        
        <profile>
            <id>gitvars</id>
            <activation>
                <property>
                    <name>!nogit</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>pl.project13.maven</groupId>
                        <artifactId>git-commit-id-plugin</artifactId>
                        <version>2.1.15</version>
                        <executions>
                            <execution>
                                <phase>initialize</phase>
                                <goals>
                                    <goal>revision</goal>
                                </goals>
                                <inherited>true</inherited>
                                <configuration>
                                    <skipPoms>false</skipPoms>
                                    <prefix>git</prefix>
                                    <dateFormat>EEE, d MMM yyyy HH:mm:ss z</dateFormat>
                                    <failOnNoGitDirectory>false</failOnNoGitDirectory>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    
</project>
